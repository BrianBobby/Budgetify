<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Generated Budget</title>
    <link rel="stylesheet" href="/styles/main.css"> <!-- Add your stylesheet if necessary -->
</head>
<body>
    <div class="container">
        <h1>Your Personalized Budget Plan</h1>

        <% if (budgetResponse && budgetResponse.budget) { %>
            <table class="budget-table">
                <thead>
                    <tr>
                        <th>Category</th>
                        <th>Recommended Amount</th>
                        <th>Current Amount</th>
                        <th>Notes</th>
                    </tr>
                </thead>
                <tbody>
                    <% budgetResponse.budget.forEach(function(item) { %>
                        <tr>
                            <td><%= item.category %></td>
                            <td>$<%= item.recommended_amount.toFixed(2) %></td>
                            <td>$<%= item.current_amount.toFixed(2) %></td>
                            <td><%= item.notes %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p>No budget data available.</p>
        <% } %>

        <a href="/" class="btn">Back to Home</a>
    </div>
</body>
</html>
