<%- include('partials/header.ejs'); -%>

    <div class="container">
        <h1>Your Personalized Budget Plan</h1>

        <% if (budgetResponse && budgetResponse.budget) { %>
            <table class="budget-table">
                <thead>
                    <tr>
                        <th>Category</th>
                        <th>Current Amount</th>
                        <th>Recommended Amount</th>
                        <th>Notes</th>
                    </tr>
                </thead>
                <tbody>
                    <% budgetResponse.budget.forEach(function(item) { %>
                        <tr>
                            <td><%= item.category %></td>
                            <td class="current-amount">₹<%= item.current_amount.toFixed(2) %></td>
                            <td class="recommended-amount">₹<%= item.recommended_amount.toFixed(2) %></td>
                            <td><%= item.notes %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p class="no-data">No budget data available.</p>
        <% } %>

        <a href="/" class="btn">Back to Home</a>
    </div>

<%- include('partials/footer.ejs'); -%>
